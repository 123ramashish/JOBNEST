<style>
  .container {
    width: auto;
    height: auto;
  }
  .heading {
    display: block;
    /*    align-items: center;
    justify-content: center; 
    flex-wrap: wrap;
    width: 90%;*/
    padding: 20px;
    width: 90vw;
    
  }
  .heading h2 {
    color: white;
    text-align: center;
  }

  .question-container {
    display: flex;
    flex-wrap:  wrap;
    justify-content: space-around;
      

    
  }
  .question {
    display: flex;
  }
  .row {
    background-color: black;
    border: 2px solid rgba(0, 0, 0, 0.308);
    width: 43%;
    height: auto;
    border-radius: 8px;
    margin: 30px;
  }
  h5,
  p {
    color: white;
    padding: 20px;
    margin: 0;
  }
</style>
<div class="container">
  <% questionArray.forEach((item) => { %>
  <div class="heading">
    <h2><%= item.title %></h2>
    <div class="question-container">
      <% item.questions.forEach((q) => { %>
      <div class="row">
        <div class="question">
          <h5><%= q.question %></h5>
          <p><%= q.company %> <%= q.year %></p>
        </div>
        <p><%= q.answer %></p>
      </div>
      <% }); %>
    </div>
  </div>
  <% }); %>
</div>
